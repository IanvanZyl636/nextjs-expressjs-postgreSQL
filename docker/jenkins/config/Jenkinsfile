pipeline {
  agent any

  environment {
    REGISTRY = 'docker-registery.local'
    BASE_IMAGE = 'nx-builder-base'
    NEXT_IMAGE = "${REGISTRY}/next-app:latest"
    EXPRESS_IMAGE = "${REGISTRY}/express-app:latest"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('DB setup') {
      steps {
        script {
          sh '''
            npm run prisma:migrate
          '''
        },
        script {
          sh '''
            npm run prisma:reset:force
          '''
        }
      }
    }

  }

  post {
    failure {
      echo 'Build failed!'
    }
    success {
      echo 'All images built and pushed successfully.'
    }
  }
}