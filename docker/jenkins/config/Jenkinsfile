pipeline {
  agent any

  environment {
    REGISTRY = 'docker-registery.local'
    BASE_IMAGE = 'nx-builder-base'
    NEXT_IMAGE = "${REGISTRY}/next-app:latest"
    EXPRESS_IMAGE = "${REGISTRY}/express-app:latest"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies'){
      steps{
        script {
          sh 'npm i'
        }
      }
    }

    stage('DB setup') {
      environment {
        DATABASE_URL = credentials('test-db-conn-string')
      }
      steps {
        script {
            sh 'npm run prisma:migrate'
        }
        script {
            sh 'npm run prisma:reset:force'
        }
      }
    }

    stage('Build') {
      steps {
        script {
            sh 'npm run build'
        }
      }
    }

    stage('Lint') {
      steps {
        script {
            sh 'npm run lint'
        }
      }
    }

    stage('Test') {
      environment {
        DATABASE_URL = credentials('test-db-conn-string')
      }
      steps {
        script {
            sh 'npm run test'
        }
      }
    }
  }

  post {
    failure {
      echo 'Build failed!'
    }
    success {
      echo 'All images built and pushed successfully.'
    }
  }
}